<%- include('includes/head') %> 
<%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Cria ou edite seu contato abaixo</p>

      <%- include('includes/messages') %>
      <% if(contato._id) {%>
      <form class="form-contato" action="/contato/edit/<%= contato._id%>" method="POST">
      <% } else { %>
      <form class="form-contato" action="/contato/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control" name="nome" />
          <span class="nomeErr text-danger danger"></span>
        </div>
        <div class="form-group">
          <label>Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" />
          <span class="sobrenomeErr text-danger danger"></span>
        </div>
        <div class="form-group">
          <label>E-mail</label>
          <input value="<%= contato.email %>" type="email" class="form-control" name="email" />
          <span class="emailErr text-danger danger"></span>
        </div>
        <div class="form-group">
          <label>Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone" />
          <span class="telefoneErr text-danger danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
